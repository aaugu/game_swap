<body>
  <div id="ig-product-main-panel">
    <div class="wrapper">
      <div class="product">
        <div class="blur d-flex align-items-center">
          <%= cl_image_tag @game.image.key, crop: :fill, class:'product-image' %>
        </div>
        <div class="games_infos h-75">
          <div class="name">
            <h1>
              <%= @game.title %>
            </h1>
          </div>
          <div class="subinfos">
            <div class="platforms">
              <%= @game.platform %>
            </div>
            <div class="category">
              <%= @game.category %>
            </div>
            <div class="release_year">
              <%= @game.release_year%>
            </div>
            <div class="price">
              <%= @game.price_per_day %> CHF per day
            </div>
            <div class="disponibility">
              <% if @game.available %>
                <img class="vu" src="https://s3.gaming-cdn.com/themes/igv1/modules/product/images/ticked2.png"> Available
              <% else %>
                <img class="vu" src="https://cdn.pixabay.com/photo/2012/04/12/20/12/x-30465_1280.png">
              <% end %>
            </div>
            <div class="btn">
              <% if @game.user == current_user %>
                <%= link_to "Rent", new_game_booking_path(@game), class: 'disabled' %>
              <% else %>
                <%= link_to "Rent", new_game_booking_path(@game) %>
              <% end %>
            </div>
          </div>
          <div class="game_description">
            <%= @game.description %>
          </div>

        </div>
      </div>
    </div>
    <div class="back text-center">
      <%= link_to 'Back to the list', games_path, class:'btn-flat' %>
    </div>
  </div>
</body>
</html>
