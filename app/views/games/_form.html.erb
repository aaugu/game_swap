
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new game</h3>
        <%= simple_form_for @game do |f| %>
          <%= f.input :title, placeholder: 'Title' %>
          <%= f.input :description, placeholder: 'Description' %>
          <%= f.input :category, placeholder: 'Category', collection: Game::CATEGORIES %>
          <%= f.input :platform, placeholder: 'Platform', collection: Game::CONSOLE_COLLECTION %>
          <%= f.input :release_year, placeholder: 'Release year', collection: 1958..Time.now.year %>
          <%= f.input :price_per_day, placeholder: 'Price per day', min: 1 %>
          <%= f.input :image, as: :file %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
