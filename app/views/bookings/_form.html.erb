<div class="container py-5">
  <h2 class="text-center mb-5">Create a booking</h2>
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3 h-75">
        <div class="container d-flex justify-content-center h-100">
          <div class="container h-100 w-100">
            <%= simple_form_for [@game, @booking] do |f| %>
              <%= f.input :start_date, as: :date, html5: true, min: Date.today %>
              <%= f.input :end_date, as: :date, html5: true, min: Date.today %>
              <div class="text-center">
                <%= f.submit 'Submit', class: 'btn btn-flat mt-2 text-center' %>
              </div>
            <% end %>
          </div>

          <div class="game shadow d-flex flex-column h-100 ml-3">
            <%= cl_image_tag @game.image.key, crop: :fill, class: 'w-100 h-100' %>
            <div class="container d-flex justify-content-between mt-2">
              <p><%= @game.title %></p>
              <p><%= @game.platform %></p>
            </div>
            <p class="container"><%= @game.price_per_day %> CHF /day</p>
          </div>
        </div>
    </div>
  </div>
</div>
