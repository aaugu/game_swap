<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-5 shadow">
        <h3 class='text-center mb-3'>Your booking for <%= @game.title %></h3>
        <%= simple_form_for [@game, @booking] do |f| %>
          <%= f.input :start_date, as: :date, html5: true, min: Date.today %>
          <%= f.input :end_date, as: :date, html5: true, min: Date.today %>
          <%= f.submit class: 'btn btn-flat mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
